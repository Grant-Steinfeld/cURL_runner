{
  "name": "curl-runner",
  "version": "1.0.0",
  "description": "A Node.js application to run cURL scripts from .sh files",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js",
    "test": "node --test tests/__tests__/*.test.js",
    "test:watch": "node --test --watch tests/__tests__/*.test.js",
    "test:coverage": "c8 node --test tests/__tests__/*.test.js",
    "test:ci": "node --test tests/__tests__/*.test.js"
  },
  "keywords": [
    "curl",
    "scripts",
    "automation",
    "http"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "c8": "^10.1.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
